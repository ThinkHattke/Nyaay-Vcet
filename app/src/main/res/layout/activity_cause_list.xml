<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CauseList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/casedetails"
        android:background="@drawable/whiterectangle">



        <TextView
            android:id="@+id/typetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type of court*"
            android:layout_below="@+id/header"
            android:layout_marginTop="30dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />

        <EditText
            android:id="@+id/edittype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/courttext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittype"
            android:text="Court Name*"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="serif"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editcourt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dateview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editcourt"
            android:layout_marginTop="30dp"
            android:text="CauseList Date*"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />

        <EditText
            android:id="@+id/editdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/casedetails"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Civil"
            android:layout_marginLeft="20dp"
            android:background="@drawable/whiterectangle"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Criminal"
            android:layout_marginLeft="30dp"
            android:background="@drawable/whiterectangle"/>

    </LinearLayout>

    <Button
        android:layout_below="@+id/type"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Submit"
        android:layout_marginLeft="110dp"
        android:background="@drawable/whiterectangle"/>





</RelativeLayout>
