<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gaurav.nyaay_vect.MainDashBoard"
    tools:showIn="@layout/app_bar_main_dash_board">
    
    
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="#FF8A65">



       <!--  First Grid Starts  -->

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="20dp"
           android:layout_gravity="center"
           android:gravity="center">


           <LinearLayout
               android:layout_width="180dp"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:onClick="fileCase"
               android:background="@drawable/whiterectangle">

               <ImageView
                   android:layout_width="50dp"
                   android:layout_height="70dp"
                   android:layout_gravity="center"
                   android:src="@drawable/calendar"
                   android:layout_marginTop="15dp"/>

               <TextView
                   android:layout_width="150dp"
                   android:layout_height="wrap_content"
                   android:text="Schedule Case"
                   android:layout_gravity="center"
                   android:layout_marginTop="20dp"
                   android:gravity="center"
                   android:textStyle="bold"
                   android:fontFamily="serif"
                   android:textSize="20dp"/>


           </LinearLayout>


           <LinearLayout
               android:layout_width="180dp"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:onClick="fileFIR"
               android:background="@drawable/whiterectangle">


               <ImageView
                   android:layout_width="50dp"
                   android:layout_height="70dp"
                   android:layout_gravity="center"
                   android:src="@drawable/policeman"
                   android:layout_marginTop="15dp"/>

               <TextView
                   android:layout_width="150dp"
                   android:layout_height="wrap_content"
                   android:text="File a FIR"
                   android:layout_gravity="center"
                   android:layout_marginTop="20dp"
                   android:gravity="center"
                   android:textStyle="bold"
                   android:fontFamily="serif"
                   android:textSize="20dp"/>

           </LinearLayout>


       </LinearLayout>


       <!--  First Grid Ends -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">


        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="rticlick"
            android:background="@drawable/whiterectangle">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/more"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="File a RTI"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textSize="20dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="causeclick"
            android:background="@drawable/whiterectangle">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/mycase"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="My Cases"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textSize="20dp"/>

        </LinearLayout>


    </LinearLayout>


       <!-- Second Grid Ends -->


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="20dp"
           android:gravity="center">


           <LinearLayout
               android:layout_width="180dp"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:onClick="caseinfo"
               android:background="@drawable/whiterectangle">

               <ImageView
                   android:layout_width="50dp"
                   android:layout_height="70dp"
                   android:layout_gravity="center"
                   android:src="@drawable/icon"
                   android:layout_marginTop="15dp"/>

               <TextView
                   android:layout_width="150dp"
                   android:layout_height="wrap_content"
                   android:text="Current Status"
                   android:layout_gravity="center"
                   android:layout_marginTop="20dp"
                   android:gravity="center"
                   android:textStyle="bold"
                   android:fontFamily="serif"
                   android:textSize="20dp"/>


           </LinearLayout>


           <LinearLayout
               android:layout_width="180dp"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="@drawable/whiterectangle">


               <ImageView
                   android:layout_width="50dp"
                   android:layout_height="70dp"
                   android:layout_gravity="center"
                   android:src="@drawable/judge"
                   android:layout_marginTop="15dp"/>

               <TextView
                   android:layout_width="150dp"
                   android:layout_height="wrap_content"
                   android:text="Other Cases"
                   android:layout_gravity="center"
                   android:layout_marginTop="20dp"
                   android:gravity="center"
                   android:textStyle="bold"
                   android:fontFamily="serif"
                   android:textSize="20dp"/>

           </LinearLayout>


       </LinearLayout>

       <!-- Third Grid Ends -->


   </LinearLayout>


   



</RelativeLayout>
